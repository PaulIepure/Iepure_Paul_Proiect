@page
@model AgentieTurism.Pages.Reservations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Offer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].NumberOfUnits)
            </th>
            <th>Price</th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].DateModify)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
            <td>
                @(item.Client.FirstName+" "+item.Client.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfUnits)
            </td>
            <td>
                @(item.NumberOfUnits*item.Offer.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModify)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
