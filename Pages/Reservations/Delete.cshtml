@page
@model AgentieTurism.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Client)
        </dt>
        <dd class="col-sm-10">
            @(Model.Reservation.Client.FirstName+" "+Model.Reservation.Client.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Offer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Offer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.NumberOfUnits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.NumberOfUnits)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @(Model.Reservation.NumberOfUnits*Model.Reservation.Offer.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.DateModify)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.DateModify)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
